<%- include("./components/header.ejs") %>

    <link rel="stylesheet" href="/assets/css/home.css">
    <div id="loader"></div>
    <div id="container-all" class="main none-display">
        <div class="side-bar">
            <a href="/user/<%= userProfile._id.toString() %>/kanban/manage-kanbans">All Your Kanbans</a>
            <h5 style="text-align: center; margin: .5em 0;">Recently Added</h5>
            <hr style="width: 80%; margin: auto;">
            <% for( let i = 0; i < 8; i++ ) { %>
                <% if (kanbans[i] && kanbans[i]._id) { %>
                    <div class="side-bar-kanban-name">
                        <div class="different-kanban">
                            <a class="kanban-link" href="/user/<%= userProfile._id.toString() %>/kanban/<%= kanbans[i]._id.toString() %>">
                                <p><%= kanbans[i].kanbanName %></p>
                            </a>
                            <form action="/user/<%= userProfile._id.toString()%>/kanban/<%= kanbans[i]._id.toString() %>/delete/soft?_method=DELETE" method="POST">
                                <button class="delete-kanban trash-button">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </form>
                        </div>
                        <hr>
                    </div>
                <% } %>
            <% } %>
            <div class="add-new-kanban-container stay-at-bottom">
                <form action="/user/<%= userProfile._id.toString()%>/kanban/add" method="POST">
                    <input type="text" name="kanbanName">
                    <button type="submit"><i class="fa-solid fa-plus"></i></button>
                </form>
            </div>
